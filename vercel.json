{
  "version": 2,
  "name": "delimarweb",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem" // Primero, intenta servir un archivo estático si existe
    },
    {
      "src": "/(.*)", // Para cualquier otra ruta que no sea un archivo estático...
      "dest": "/index.html" // ...devuelve siempre index.html
    }
  ],
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install"
}